@{
    ViewData["Title"] = "Register";
}
@model RegisterVM
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name">First Name</label>
                                    <input asp-for="Name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Second Name</label>
                                    <input asp-for="Surname" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email">Email Address*</label>
                                    <input asp-for="Email" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Username"></label>
                                    <input asp-for="Username" />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="RepeatPassword"></label>
                                    <input asp-for="RepeatPassword" />
                                    <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section scripts{
    <partial name="_ValidationPartial" />
}
