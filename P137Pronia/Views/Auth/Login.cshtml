
@{
    ViewData["Title"] = "Login";
}
@model LoginVM
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label asp-for="UsernameOrEmail">Email Address*</label>
                                    <input asp-for="UsernameOrEmail" />
                                    <span asp-validation-for="UsernameOrEmail"></span>
                                </div>
                                <div class="col-lg-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="col-lg-12">
                                    <div class="check-box">
                                        <label asp-for="RememberMe">Remember me</label>
                                        <input style="display:block" asp-for="RememberMe" />
                                        <span asp-validation-for="RememberMe"></span>
                                    </div>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">
                                </div>
                                <div class="col-lg-12 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a href="#"> Forgotten pasward?</a>
                                    </div>
                                </div>
                                <div class="col-lg-12 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section scripts{
    <partial name="_ValidationPartial" />
}
