                                            <img class="img-full"
                                                 src="~/@Model.HoverImage"
                                                 alt="Product Image" />
                                        </a>
                                    </div>
                                }
                                @foreach (var item in Model.ProductImages)
                                {
                                    <div class="swiper-slide">
                                        <a href="~/@item.Name"
                                           class="single-img gallery-popup">
                                            <img class="img-full"
                                                 src="~/@item.Name"
                                                 alt="Product Image" />
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="thumbs-arrow-holder">
                            <div class="swiper-container single-product-thumbs">
