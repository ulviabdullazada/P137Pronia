@model IEnumerable<Product>
@foreach (var prod in Model)
{
    <div class="col-md-4 col-sm-6">
        <div class="product-item">
            <div class="product-img">
                <a asp-action="Detail" asp-controller="Flower" asp-route-id="@prod.Id">
                    <img class="primary-img"
                         src="@prod.MainImage"
                         alt="Product Images" />
                    @if (prod.HoverImage != null)
                    {
                        <img class="secondary-img"
                             src="@prod.HoverImage"
                             alt="Product Images" />
                    }
                </a>
                <div class="product-add-action">
                    <ul>
                        <li class="quuickview-btn"
                            data-bs-toggle="modal"
                            data-bs-target="#quickModal">
                            <a href="#"
                               data-tippy="Quickview"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                <i class="pe-7s-look"></i>
                            </a>
                        </li>
                        <li>
                            <a href="cart.html"
                               data-tippy="Add to cart"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                <i class="pe-7s-cart"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <a class="product-name"
                   asp-action="Detail" asp-controller="Flower" asp-route-id="@prod.Id">@prod.Name</a>
                <div class="price-box pb-1">
                    <span class="new-price">$@prod.Price </span>
                </div>
                <div class="rating-box">
                    <ul>
                        @for (int i = 0; i < prod.Rating; i++)
                        {
                            <li><i class="fa fa-star"></i></li>
                        }
                        @for (int i = 0; i < 5-prod.Rating; i++)
                        {
                            <li><i style="color:#000" class="fa fa-star"></i></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}