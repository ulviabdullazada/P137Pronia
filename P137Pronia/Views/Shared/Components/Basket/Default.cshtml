@model List<BasketItemProductVM>
<div class="minicart-content">
    <div class="minicart-heading">
        <h4 class="mb-0">Shopping Cart</h4>
        <a href="#" class="button-close">
            <i class="pe-7s-close"
               data-tippy="Close"
               data-tippy-inertia="true"
               data-tippy-animation="shift-away"
               data-tippy-delay="50"
               data-tippy-arrow="true"
               data-tippy-theme="sharpborder"></i>
        </a>
    </div>
    <ul class="minicart-list">
        @foreach (var item in Model)
        {
            <li class="minicart-product">
                <a class="product-item_remove" href="#">
                    <i class="pe-7s-close"
                       data-tippy="Remove"
                       data-tippy-inertia="true"
                       data-tippy-animation="shift-away"
                       data-tippy-delay="50"
                       data-tippy-arrow="true"
                       data-tippy-theme="sharpborder"></i>
                </a>
                <a asp-action="Detail" asp-controller="Flower" asp-route-id="@item.Product.Id"
                   class="product-item_img">
                    <img class="img-full"
                         src="@item.Product.MainImage"
                         alt="Product Image" />
                </a>
                <div class="product-item_content">
                    <a class="product-item_title"
                       href="single-product-variable.html">@item.Product.Name</a>
                       @if (item.Product.Discount != 0)
                    {
                        <span class="product-item_quantity">@item.Count x <del>$@item.Product.Price</del> <sup>$@(item.Product.Price * (100 - item.Product.Discount) / 100)</sup> </span>
                    }
                    else
                    {
                        <span class="product-item_quantity">@item.Count x $@item.Product.Price </span>
                    }
                </div>
            </li>

        }
    </ul>
    <div class="minicart-item_total">
        <span>Subtotal</span>
        <span class="ammount">$@ViewBag.SubTotal</span>
    </div>
</div>
<div class="group-btn_wrap d-grid gap-2">
    <a href="cart.html" class="btn btn-dark">View Cart</a>
    <a href="checkout.html" class="btn btn-dark">Checkout</a>
</div>